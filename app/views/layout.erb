<!DOCTYPE html>
<html>



 <% if session[:user_id] %>
 <form method='post' action='/user'>
   <input type='hidden' name='_method' value='delete'>
   <input type='submit' value='Sign out'>
 </form>

 <% else %>
  <form id='sign_in_form' action='/' method='post'>
    <input id='email' name='email' type='email' placeholder='enter email'>
    <input id='password' name='password' type='password' placeholder='enter password'>
    <input id='sign_in' value='Sign In' type='submit'>
  </form>
  Don't have an account? <a href='/sign_up'> Sign up </a>
<% end %>

  <!-- <form action='/venue' method='get'>
    <input id='go_venues' value='View Venues' type='submit'>
  </form> -->



<% if flash[:notice] %>
  <div id='notice'><%= flash[:notice] %></div>
<% end %>

<% if flash[:errors] %>
  <div id='errors'><%= flash[:errors] %></div>
<% end %>


<%= yield %>
</html>
