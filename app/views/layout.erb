<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" type='text/css' href="/css/menu.css">
  <link rel="stylesheet" type='text/css' href="/css/buttons.css">
</head>
<div id="particle"> </div>
<div id="overlay">
<nav class="sign_menu">
<% if session[:user_id] %>
<div class='sign_out'>
  <form method='post' action='/user'>
    <input type='hidden' name='_method' value='delete'>
    <input class='buttons' type='submit' value='Sign out'>
  </form>
</div>

<% else %>
<div class='sign_in'>
  <form id='sign_in_form' action='/' method='post'>
    <input id='email' name='email' type='email' placeholder='enter email'>
    <input id='password' name='password' type='password' placeholder='enter password'>
    <input class='buttons' id='sign_in' value='Sign In' type='submit'>
  </form>
</div>

 <div class='sign_up_message'>
 Don't have an account? <a href='/sign_up'> Sign up </a>
 </div>
<% end %>
</nav>

<nav class="slidemenu">


  <!-- Item 1 -->
  <input type="radio" name="slideItem" id="slide-item-1" class="slide-toggle" checked/>
  <label for="slide-item-1"><p class="icon"><a href='/' style="text-decoration: none;">♬</p><span>Home</span></a></label>

  <!-- Item 2 -->
  <input type="radio" name="slideItem" id="slide-item-2" class="slide-toggle" />
  <label for="slide-item-2" onclick="/venue'"><p class="icon"><a href='/venue' style="text-decoration: none;">✈</p><span>Venues</a></span></label>

  <!-- Item 3 -->
  <input type="radio" name="slideItem" id="slide-item-3" class="slide-toggle"/>
  <label for="slide-item-3"><p class="icon"><a href='/reservations' style="text-decoration: none;">✎</p><span>Reservations</span></label></a>

  <!-- Item 4 -->
  <input type="radio" name="slideItem" id="slide-item-4" class="slide-toggle"/>
  <label for="slide-item-4"><p class="icon"><a href='/favorite' style="text-decoration: none;">★</p><span>Favorites</span></label></a>


  <div class="clear"></div>

  <!-- Bar -->
  <!-- <div class="slider">
    <div class="bar"></div>
  </div> -->

</nav>

<% if flash[:notice] %>
  <div id='notice'><%= flash[:notice] %></div>
<% end %>

<% if flash[:errors] %>
  <div id='errors'><%= flash[:errors] %></div>
<% end %>

<% if flash[:taken] %>
<div id='taken'><%= flash[:taken] %></div>
<%end%>


<%= yield %>

</div>

</html>
